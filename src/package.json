{
  "name": "abilitylab-signage-hardware",
  "version": "1.0.0",
  "description": "Master Controller and Display Applications for Ability Lab Digital Signage.",
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 delete ecosystem.config.js",
    "stop:wds": "pkill -f webpack-dev-server",
    "tkill": "taskkill /f /im node.exe",
    "kill": "pm2 kill",
    "monit": "pm2 monit",
    "lint": "eslint .",
    "build:display": "webpack --progress --colors --config DisplayApp/webpack.config.js --env.BUILD",
    "build:background:global": "cd DisplayApp/Background/Global/ && make Release",
    "build:background:thinkspeak": "cd DisplayApp/Background/ThinkSpeak/ && make Release",
    "build:background:legswalking": "cd DisplayApp/Background/LegsWalking/ && make Release",
    "build:background:armshands": "cd DisplayApp/Background/ArmsHands/ && make Release",
    "build:background:strengthendurance": "cd DisplayApp/Background/StrengthEndurance/ && make Release",
    "build:background:pediatrics": "cd DisplayApp/Background/Pediatrics/ && make Release",
    "process:newrelic": "node NewRelic/pm2plugin.js",
    "process:master": "node MasterController",
    "process:master:apiendpoint": "cd MasterController && http-server -c-1 -p 3030 --cors",
    "process:master:httpserver": "cd DisplayApp && http-server -c-1 -p 3000",
    "process:display:dev": "webpack-dev-server --progress --colors --no-inline --config DisplayApp/webpack.config.js --env.HOT",
    "process:electron": "electron ./DisplayApp/ --enable-experimental-web-platform-features --enable-transparent-visuals --enable-gpu-rasterization --enable-zero-copy",
    "process:background:global1:linux": "./DisplayApp/Background/Global/bin/Global --args 1",
    "process:background:global2:linux": "./DisplayApp/Background/Global/bin/Global --args 2",
    "process:background:global3:linux": "./DisplayApp/Background/Global/bin/Global --args 3",
    "process:background:global4:linux": "./DisplayApp/Background/Global/bin/Global --args 4",
    "process:background:thinkspeak:linux": "./DisplayApp/Background/ThinkSpeak/bin/ThinkSpeak",
    "process:background:legswalking:linux": "./DisplayApp/Background/LegsWalking/bin/LegsWalking",
    "process:background:armshands:linux": "./DisplayApp/Background/ArmsHands/bin/ArmsHands",
    "process:background:strengthenduranceM:linux": "mplayer ../../strengthendurance.mov -loop 0 -noborder",
    "process:background:strengthendurance:linux": "./DisplayApp/Background/StrengthEndurance/bin/StrengthEndurance",
    "process:background:pediatrics1:linux": "vlc ./DisplayApp/Background/Pediatrics/bin/data/pediatrics.mp4 --video-wallpaper -L --qt-start-minimized --no-qt-privacy-ask --qt-notification=0 --no-autoscale --no-osd --align=1",
    "process:background:pediatrics2:linux": "vlc ./DisplayApp/Background/Pediatrics/bin/data/pediatrics.mp4 --video-wallpaper -L --qt-start-minimized --no-qt-privacy-ask --qt-notification=0 --no-autoscale --no-osd --align=2",
    "process:background:pediatrics3:linux": "vlc ./DisplayApp/Background/Pediatrics/bin/data/pediatrics.mp4 --video-wallpaper -L --qt-start-minimized --no-qt-privacy-ask --qt-notification=0 --no-autoscale --no-osd --align=1",
    "process:background:pediatrics4:linux": "vlc ./DisplayApp/Background/Pediatrics/bin/data/pediatrics.mp4 --video-wallpaper -L --qt-start-minimized --no-qt-privacy-ask --qt-notification=0 --no-autoscale --no-osd --align=2",
    "process:logs": "pm2 logs",
    "logs": "pm2 logs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandtheory/abilitylab-signage-hardware.git"
  },
  "author": "David Whitely <davydka@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codeandtheory/abilitylab-signage-hardware/issues"
  },
  "homepage": "https://github.com/codeandtheory/abilitylab-signage-hardware#readme",
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "copy-webpack-plugin": "4.0.1",
    "css-hot-loader": "1.3.2",
    "css-loader": "0.28.7",
    "eslint": "4.10.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "node-sass": "4.5.3",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "postcss-cssnext": "3.0.2",
    "postcss-loader": "2.0.8",
    "postcss-reporter": "5.0.0",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.0",
    "stylelint": "8.2.0",
    "stylelint-config-standard": "17.0.0",
    "stylelint-webpack-plugin": "0.9.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3"
  },
  "dependencies": {
    "amqplib": "0.5.1",
    "classnames": "2.2.5",
    "dotenv": "4.0.0",
    "download": "6.2.5",
    "electron": "1.4.6",
    "fs-extra": "5.0.0",
    "gsap": "1.20.3",
    "http-server": "0.10.0",
    "mocha": "4.1.0",
    "node-fetch": "1.7.3",
    "node-schedule": "1.2.5",
    "pm2": "2.7.1",
    "prop-types": "15.6.0",
    "query-string": "5.0.1",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-transition-group": "1.2.1",
    "request": "2.83.0"
  }
}
